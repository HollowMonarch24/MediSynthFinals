@model PatientCredentials
<h1>Edit Patient Details</h1>
<form asp-action="Edit" method="post">

    <div class="form-group">
        <label asp-for="patientId"></label>
        <input asp-for="patientId" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="patientRef"></label>
        <input asp-for="patientRef" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="fName">First Name</label>
        <input asp-for="fName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="lName"></label>
        <input asp-for="lName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="address"></label>
        <input asp-for="address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="region"></label>
        <input asp-for="region" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="city"></label>
        <input asp-for="city" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="gender"></label>
        <input asp-for="gender" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="birthdate"></label>
        <input asp-for="birthdate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="birthplace"></label>
        <input asp-for="birthplace" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="contactNum"></label>
        <input asp-for="contactNum" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="occupation"></label>
        <input asp-for="occupation" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="religion"></label>
        <input asp-for="religion" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="emergencyName"></label>
        <input asp-for="emergencyName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="emergencyNum"></label>
        <input asp-for="emergencyNum" class="form-control" />
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="button" class="btn btn-secondary" onclick="history.back();">Cancel</button>
</form>